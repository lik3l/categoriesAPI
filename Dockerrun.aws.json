{
  "AWSEBDockerrunVersion": 2,
  "volumes": [
    {
      "name": "python-app",
      "host": {
        "sourcePath": "/var/app/current"
      }
    }
  ],
  "containerDefinitions": [
    {
      "name": "python-app",
      "image": "lik3l/categories-app:latest",
      "essential": true,
      "memory": 128,
      "environment": [{
        "name": "DEBUG",
        "value": 1
      }],
      "commands": [
        "gunicorn",
        "categoriesAPI.wsgi:application",
        "--bind",
        "0.0.0.0:8000"
      ],
      "mountPoints": [
        {
          "sourceVolume": "python-app",
          "containerPath": "/code"
        }
      ],
      "portMappings": [
        {
          "hostPort": 8000,
          "containerPort": 8000
        }
      ]
    }
  ]
}